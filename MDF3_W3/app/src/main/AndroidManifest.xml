<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fullsail.com.mdf3_w3" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DetailsActivity"
            android:label="Article Details" >
        </activity>

        <activity
            android:name=".AddActivity"
            android:label="Publish New Article" >

        </activity>

        <receiver android:name=".widgetclasses.CollectionWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="fullsail.com.mdf3_w3.ACTION_VIEW_DETAILS" />
                <action android:name="fullsail.com.mdf3_w3.ACTION_ADD_ARTICLE" />
                <action android:name="fullsail.com.mdf3_w3.ACTION_REFRESH" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/collection_appwidget_info" />
        </receiver>

        <service android:name=".widgetclasses.CollectionWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

    </application>

</manifest>
